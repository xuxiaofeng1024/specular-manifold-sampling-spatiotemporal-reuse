<scene version="2.0.0">

    <default name="light_angle" value="60"/>

    <default name="spp" value="32"/>
    <default name="crop_offset_x" value="0"/>
    <default name="crop_offset_y" value="0"/>
    <default name="crop_width" value="1920"/>
    <default name="crop_height" value="1080"/>
    
    <default name="samples_per_pass" value="4294967295"/>   <!-- == ((size_t) -1) -->
    <default name="timeout" value="-1.0"/>
    
    <default name="caustics_reuse"                  value="false"/>
    <default name="caustics_spatial_reuse_size"     value="0"/>
    <default name="caustics_spatial_reuse_unique"   value="false"/>
    <default name="caustics_pixel_reuse_unique"     value="false"/>
    <default name="caustics_current_path_reuse" value="results_sphere_angle_10"/>
    <default name="caustics_temporal_path_reuse" value="results_sphere_angle_9"/>
    <default name="caustics_temporal_reuse"         value="false"/>
    
    <default name="caustics_biased"                 value="false"/>
    <default name="caustics_twostage"               value="false"/>
    <default name="caustics_halfvector_constraints" value="false"/>
    <default name="caustics_mnee_init"              value="false"/>

    <default name="caustics_max_iterations"         value="20"/>
    <default name="caustics_solver_threshold"       value="0.00001"/>
    <default name="caustics_uniqueness_threshold"   value="0.00001"/>
    <default name="caustics_max_trials"             value="10000000"/>

    <default name="biased_mnee" value="false"/>

    <integrator type="path_sms_ss">
        <integer name="max_depth" value="6"/>
        <integer name="samples_per_pass" value="$samples_per_pass"/>
        <float name="timeout"                    value="$timeout"/>
        
        <boolean name="reuse"                   value="$caustics_reuse"/>
        <integer name="spatial_reuse_size"      value="$caustics_spatial_reuse_size"/>
        <boolean name="spatial_reuse_unique"    value="$caustics_spatial_reuse_unique"/>
        <boolean name="pixel_reuse_unique"      value="$caustics_pixel_reuse_unique"/>
        <string  name="current_file_path_reuse"  value="$caustics_current_path_reuse"/>
        <string  name="temporal_file_path_reuse" value="$caustics_temporal_path_reuse"/>
        <boolean name="temporal_reuse"          value="$caustics_temporal_reuse"/>
        
        <boolean name="biased"                  value="$caustics_biased"/>
        <boolean name="twostage"                value="$caustics_twostage"/>
        <boolean name="halfvector_constraints"  value="$caustics_halfvector_constraints"/>
        <boolean name="mnee_init"               value="$caustics_mnee_init"/>
        <integer name="max_iterations"          value="$caustics_max_iterations"/>
        <float   name="solver_threshold"        value="$caustics_solver_threshold"/>
        <float   name="uniqueness_threshold"    value="$caustics_uniqueness_threshold"/>
        <integer name="max_trials"              value="$caustics_max_trials"/>

        <boolean name="biased_mnee" value="$biased_mnee"/>
    </integrator>

    <sensor type="perspective">
        <string name="fov_axis" value="smaller"/>
        <float name="near_clip" value="0.0001"/>
        <float name="far_clip" value="1000000"/>
        <float name="fov" value="48"/>
        <transform name="to_world">
        <lookat origin="10, 11, 10"
                    target="0, 0.5, 0"
                    up    ="0, 1, 0"/>
        </transform>
        <sampler type="independent">
            <integer name="sample_count" value="$spp"/>
        </sampler>
        <film type="hdrfilm">
            <integer name="width" value="1920"/>
            <integer name="height" value="1080"/>
            <rfilter type="gaussian"/>

            <integer name="crop_offset_x" value="$crop_offset_x"/>
            <integer name="crop_offset_y" value="$crop_offset_y"/>
            <integer name="crop_width" value="$crop_width"/>
            <integer name="crop_height" value="$crop_height"/>
        </film>
    </sensor>

    <shape type="rectangle">
        <bsdf type="diffuse" id="light">
            <spectrum name="reflectance" value="0.0"/>
        </bsdf>

        <emitter type="area">
            <boolean name="caustic_emitter_single" value="true"/>
            <spectrum name="radiance" value="50000"/>
        </emitter>

        <transform name="to_world">
            <rotate x="1" y="0" z="0" angle="90"/>
            <scale x="0.2" y="1" z="0.2"/>
            <translate x="0" y="50" z="0"/>

            <rotate x="1" y="0" z="0" angle="$light_angle"/>
            <rotate x="0" y="1" z="0" angle="90"/>
        </transform>
    </shape>

    <shape type="rectangle">
        <boolean name="caustic_receiver" value="true"/>

        <bsdf type="diffuse">
            <spectrum name="reflectance" type="bitmap">
                <string name="filename" value="textures/[2K]Tiles71/Tiles71_col.jpg"/>
                <transform name="to_uv">
                    <scale x="50" y="50"/>
                </transform>
            </spectrum>
        </bsdf>

        <transform name="to_world">
            <scale x="400" y="400" z="400"/>
            <rotate x="1" y="0" z="0" angle="-90"/>
        </transform>
    </shape>

    <shape type="sphere">
        <boolean name="caustic_caster_single" value="true"/>

        <bsdf type="normalmap">
            <bsdf type="dielectric"/>
            <string name="filename" value="textures/normalmap_waves.exr"/>
            <float name="tiles" value="1"/>
        </bsdf>

        <transform name="to_world">
            <scale x="6.5" y="6.5" z="6.5"/>
        </transform>
    </shape>
</scene>
